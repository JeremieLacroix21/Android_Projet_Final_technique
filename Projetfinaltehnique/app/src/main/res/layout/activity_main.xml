<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/backgroundroute">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="logout"
        android:text="Logout"
        android:visibility="visible" />
    <RelativeLayout
        android:id="@+id/layoutLogo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:scaleType="fitCenter"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/Logo"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:contentDescription="@null"
            android:src="@drawable/panierxpress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Logo"
            android:layout_marginTop="20dp"
            android:text="xpress shop"
            android:textColor="@color/logo"
            android:gravity="right"
            android:textSize="30dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="595dp"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="ModifierProfilOnClick"
            android:text="Modifier Profil" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="InventaireOnclick"
            android:text="Inventaire" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="AjouterProduitOnClick"
            android:text="Ajouter Un Produit" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="VisualiserCommandeOnClick"
            android:text="Commandes" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="Liste_fournisseur_on_click"
            android:text="Liste des fournisseur" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="ListeCompagniesOnClick"
            android:text="Liste des Compagnies" />

        <Button
            android:id="@+id/BTN_produits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Produits"
            android:onClick="ProduitsOnClick"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="AboutOnClick"
            android:text="About" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="131dp"
        android:textAlignment="center" />

</RelativeLayout>
</ScrollView>