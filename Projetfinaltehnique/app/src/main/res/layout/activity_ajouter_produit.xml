<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundroute"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:scaleType="fitCenter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="?attr/homeAsUpIndicator"
                android:onClick="RedirectToMainMenu"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Logo"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/panierxpress" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="xpress shop"
                android:textColor="@color/logo"
                android:textSize="30dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_subscribe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:text="Ajout de produit"
            android:textAlignment="center"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="434dp"
            android:layout_marginTop="9dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/input_nom_AjoutProduit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nom du produit"
                android:inputType="text" />

            <EditText
                android:id="@+id/input_Definition_AjoutProduit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Definition" />

            <EditText
                android:id="@+id/input_prix_AjoutProduit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Prix"
                android:inputType="phone" />

            <EditText
                android:id="@+id/input_quantité_AjoutProduit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quantité"
                android:inputType="phone" />

            <EditText
                android:id="@+id/input_tags_AjoutProduit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="tags"
                android:inputType="phone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Image" />

                <ImageView
                    android:id="@+id/imageView_AjouterProduit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></ImageView>

                <Button
                    android:id="@+id/BTN_ChoisirImage_AjouterProduit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="pickFromGallery"
                    android:text="Choisir une image" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/Textview_error_AjoutProduit"
            android:layout_width="match_parent"
            android:layout_height="43dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20px"
            android:textAlignment="center">

            <Button
                android:id="@+id/BTN_AjouterProduit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="AjouterProduit"
                android:layout_marginLeft="20px"
                android:padding="10px"
                android:text="Ajouter Le produit" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>