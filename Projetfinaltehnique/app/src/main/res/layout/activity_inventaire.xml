<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundroute"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:scaleType="fitCenter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Logo"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/panierxpress" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="xpress shop"
                android:textColor="@color/logo"
                android:textSize="30dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_subscribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:text="Votre Inventaire"
            android:textAlignment="center"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="382dp"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/Liste_nom_inventaire"
                android:layout_width="101dp"
                android:layout_height="match_parent" />

            <ListView
                android:id="@+id/Liste_prix_inventaire"
                android:layout_width="61dp"
                android:layout_height="match_parent">

            </ListView>

            <ListView
                android:id="@+id/Liste_qty_inventaire"
                android:layout_width="74dp"
                android:layout_height="match_parent" />

            <ListView
                android:id="@+id/Liste_description_inventaire"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>