<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundroute"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:scaleType="fitCenter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="?attr/homeAsUpIndicator"
                android:onClick="RedirectToMainMenu"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Logo"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:contentDescription="@null"
                android:src="@drawable/panierxpress" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="xpress shop"
                android:textColor="@color/logo"
                android:textSize="30dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/text_subscribe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:text="À propos"
            android:textAlignment="center"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="972dp"
            android:layout_marginTop="9dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="L'application : "
                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="376dp"
                android:text="L'application mobile permet au distributeurs de se connecter avec son compte et de consulter ces commandes. Celle-ci permet aussi de recevoir des notifications de la messagerie instantané et de communiquer avec ces clients. Ils peuvent aussi soumettre une inscription par l’application mobile et explorer les produits offerts par les fournisseurs. Il pourra tout comme sur le site web compléter des commandes."
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="L'équipe"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="334dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="211dp"
                    android:layout_height="330dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="138dp"
                        android:src="@drawable/charles"
                        tools:srcCompat="@drawable/charles" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Charles Bourgeois"
                        android:textAlignment="center" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="138dp"
                        android:src="@drawable/mathieu"
                        tools:srcCompat="@drawable/mathieu" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:text="Mathieu Sévigny"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="211dp"
                    android:layout_height="330dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="211dp"
                        android:layout_height="138dp"
                        tools:srcCompat="@drawable/capture" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/je"
                        android:text="Jérémie Lacroix"
                        android:textAlignment="center" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="match_parent"
                        android:layout_height="138dp"
                        android:src="@drawable/gab"
                        tools:srcCompat="@drawable/gab" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:text="Gabriel Fournier"
                        android:textAlignment="center" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="10dp"
                android:textAlignment="center"
                android:text="Pour plus d'information, Visiter notre site internet :" />

            <TextView
                android:id="@+id/textView_link"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="10dp"
                android:textAlignment="center" />

        </LinearLayout>


        </LinearLayout>
</ScrollView>