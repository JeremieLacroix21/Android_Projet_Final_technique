<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".chatkit.conversations.StartConversationActivity">

    <View
            android:id="@+id/containerTopBar2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal" />

    <RelativeLayout
            android:id="@+id/containerContent2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/containerTopBar2">

        <RelativeLayout
                android:id="@+id/containerProduct2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp">

            <TextView
                    android:id="@+id/lblProductTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center|fill"
                    android:padding="10dp"
                    android:text="SÃ©lectionnez un fournisseur"
                    android:textColor="@color/dark_text"
                    android:textSize="24sp" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewSuppliers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/containerProduct2"
                android:layout_marginTop="15dp" />


    </RelativeLayout>

</RelativeLayout>